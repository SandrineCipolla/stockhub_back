{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["src/domain/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@utils/*": ["src/Utils/*"],
      "@config/*": ["src/config/*"],
      "@api/*": ["src/api/*"],
      "@services/*": ["src/services/*"],
      "@repositories/*": ["src/repositories/*"],
      "@controllers/*": ["src/controllers/*"],
      "@routes/*": ["src/routes/*"],
      "@authentication/*": ["src/authentication/*"],
      "@serverSetup/*": ["src/serverSetup/*"],
      "@core/*": ["src/*"],
      "@helpers/*": ["tests/helpers/*", "src/helpers/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "tests/**/*.ts", "tests/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
