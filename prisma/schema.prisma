generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Item {
  id           Int       @id @default(autoincrement())
  label        String?   @db.VarChar(255)
  description  String?   @db.VarChar(255)
  quantity     Int?
  minimumStock Int       @default(1)
  stockId      Int?
  stock        Stock?    @relation(fields: [stockId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([stockId])
  @@map("items")
}

model Stock {
  id            Int               @id @default(autoincrement())
  label         String            @db.VarChar(255)
  description   String?           @db.VarChar(255)
  category      StockCategory     @default(alimentation)
  userId        Int?
  items         Item[]
  collaborators StockCollaborator[]
  user          User?             @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([userId])
  @@map("stocks")
}

model User {
  id                    Int                  @id @default(autoincrement())
  email                 String               @unique @db.VarChar(255)
  stocks                Stock[]
  familyMemberships     FamilyMember[]
  stockCollaborations   StockCollaborator[]  @relation("UserCollaborations")
  grantedCollaborations StockCollaborator[]  @relation("GrantedByUser")

  @@map("users")
}

model Family {
  id        Int            @id @default(autoincrement()) @map("ID")
  name      String         @db.VarChar(255) @map("NAME")
  createdAt DateTime       @default(now()) @map("CREATED_AT")
  members   FamilyMember[]
}

model FamilyMember {
  id        Int        @id @default(autoincrement()) @map("ID")
  familyId  Int        @map("FAMILY_ID")
  userId    Int        @map("USER_ID")
  role      FamilyRole @default(MEMBER) @map("ROLE")
  joinedAt  DateTime   @default(now()) @map("JOINED_AT")
  family    Family     @relation(fields: [familyId], references: [id], onDelete: Cascade)
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([familyId, userId])
  @@index([familyId])
  @@index([userId])
}

model StockCollaborator {
  id            Int       @id @default(autoincrement()) @map("ID")
  stockId       Int       @map("STOCK_ID")
  userId        Int       @map("USER_ID")
  role          StockRole @default(VIEWER) @map("ROLE")
  grantedAt     DateTime  @default(now()) @map("GRANTED_AT")
  grantedBy     Int?      @map("GRANTED_BY")
  stock         Stock     @relation(fields: [stockId], references: [id], onDelete: Cascade)
  user          User      @relation("UserCollaborations", fields: [userId], references: [id], onDelete: Cascade)
  grantedByUser User?     @relation("GrantedByUser", fields: [grantedBy], references: [id], onDelete: SetNull)

  @@unique([stockId, userId])
  @@index([stockId])
  @@index([userId])
  @@index([grantedBy])
}

enum StockCategory {
  alimentation
  hygiene
  artistique
}

enum FamilyRole {
  ADMIN
  MEMBER
}

enum StockRole {
  OWNER
  EDITOR
  VIEWER
  VIEWER_CONTRIBUTOR
}
