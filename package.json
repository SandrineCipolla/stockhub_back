{
  "name": "StockHubBackend",
  "version": "2.4.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "start": "node -r tsconfig-paths/register dist/index.js",
    "start:dev": "nodemon --exec node -r tsconfig-paths/register -r ts-node/register --env-file=.env ./src/index.ts",
    "start:prod": "node -r tsconfig-paths/register dist/src/index.js",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "test:unit": "jest --config jest.config.js --runInBand --detectOpenHandles --forceExit",
    "test:ci": "jest --config=jest.ci.config.js --detectOpenHandles --forceExit",
    "test:coverage": "COVERAGE=true jest --config=jest.ci.config.js --passWithNoTests --detectOpenHandles --forceExit",
    "test:integration": "jest --config jest.integration.config.js --runInBand --detectOpenHandles --forceExit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "migrate:test": "dotenv -e .env.test -- prisma migrate dev --name init --schema=prisma/schema.prisma",
    "build": "npx prisma generate && webpack --config webpack.config.js",
    "build:local": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "copy-certs": "cp ./server.cert ./dist",
    "postinstall": "prisma generate",
    "lint": "eslint . --ext .ts,.js --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "prepare": "husky install",
    "db:seed": "ts-node -r tsconfig-paths/register prisma/seed.ts",
    "azure:start": "az webapp start --name stockhub-back --resource-group StockHubApp-resources",
    "azure:stop": "az webapp stop --name stockhub-back --resource-group StockHubApp-resources"
  },
  "prisma": {
    "seed": "ts-node -r tsconfig-paths/register prisma/seed.ts"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.16.0",
    "applicationinsights": "^3.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.20.0",
    "iconv-lite": "^0.6.3",
    "js-yaml": "^4.1.1",
    "mysql2": "^3.9.4",
    "passport": "^0.7.0",
    "passport-azure-ad": "^4.3.5",
    "prisma": "^6.16.0",
    "swagger-ui-express": "^5.0.1",
    "typescript-logging": "^2.2.0",
    "typescript-logging-category-style": "^2.2.0"
  },
  "devDependencies": {
    "@azure/msal-node": "^3.8.4",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.25.0",
    "@playwright/test": "^1.57.0",
    "@testcontainers/mysql": "^11.10.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.25",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/mysql": "^2.15.25",
    "@types/passport-azure-ad": "^4.3.6",
    "@types/react-router-dom": "^5.3.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "copy-webpack-plugin": "^13.0.1",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.0.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.0",
    "prettier": "^3.7.4",
    "supertest": "^6.3.4",
    "testcontainers": "^11.10.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "wait-on": "^9.0.4",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  }
}
